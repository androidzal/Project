<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/item_recipelist_image"
        android:scaleType="centerCrop"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_recipelist_image"
        android:id="@+id/item_recipelist_name"
        android:layout_marginLeft="5dp"
        android:gravity="left|center_vertical"
        android:textColor="@color/black"
        android:layout_centerVertical="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_recipelist_image"
        android:layout_below="@+id/item_recipelist_name"
        android:layout_alignBottom="@+id/item_recipelist_image"
        android:layout_marginLeft="5dp"
        android:id="@+id/item_recipelist_introduction"
        android:ellipsize="end"
        android:visibility="gone"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addfood_textview_foodname"
        android:textSize="16dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_margin="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/addfood_layout_top"
        android:layout_below="@+id/addfood_textview_foodname">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:gravity="center">
            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/addfood_edit_amount"
                android:inputType="number"
                android:background="@color/white"
                android:layout_marginRight="10dp"
                android:hint="@string/addfood_hint_input"/>
            <Spinner
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/addfood_spinner_unit"
                android:entries="@array/measurement_unit"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="10dp">
            <Spinner
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/addfood_spinner_location"
                android:entries="@array/storage_position"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_margin="10dp"
                android:id="@+id/addfood_textview_storageinformaiton"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/add_food_layout_bottom"
        android:layout_below="@+id/addfood_layout_top">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_food_button_confirm"
            android:text="@string/addfood_dialog_confirm"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_food_button_cancel"
            android:text="@string/addfood_dialog_cancel"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>
    </LinearLayout>
</RelativeLayout>
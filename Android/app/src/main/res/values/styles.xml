<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lightskyblue</item>
        <item name="colorPrimaryDark">@color/skyblue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 对话框样式 -->
    <style name="Theme.Light.Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <!-- 弹出框动画 由下至上 -->
    <style name="dialogStyle" parent="@android:style/Animation.Dialog">
        <item name="@android:windowEnterAnimation">@anim/enter</item>
        <!-- 进入时的动画 -->
        <item name="@android:windowExitAnimation">@anim/exit</item>
        <!-- 退出时的动画 -->
    </style>
</resources>
